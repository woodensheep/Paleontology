<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="形象美："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色彩美："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态美："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="愉悦美："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奇特性和奇异性："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源规模和组合："
                android:textColor="@color/relic_text_color"
                android:textSize="@dimen/relic_text" />

            <TextView
                android:id="@+id/tv_art_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceshi"
                android:textColor="@color/relic_text_edit_color"
                android:textSize="@dimen/relic_text" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
